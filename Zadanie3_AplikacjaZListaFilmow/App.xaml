<Application x:Class="Zadanie3_AplikacjaZListaFilmow.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Zadanie3_AplikacjaZListaFilmow"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button"
               x:Key="editButtonStyle">
            <Setter Property="Background" Value="#23B3EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="Button"
               x:Key="addButtonStyle"
               BasedOn="{StaticResource editButtonStyle}">
            <Setter Property="Background" Value="#EB234B"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Application.Resources>
</Application>
